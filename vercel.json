{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/((?!api/|uploads/|assets/|favicon.ico|vite.svg).*)",
      "destination": "/index.html"
    }
  ],
  "cleanUrls": true
}