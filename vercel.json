{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/((?!api/|uploads/).*)",
      "destination": "/public/$1"
    },
    {
      "source": "/((?!api/|uploads/).*)",
      "destination": "/public/index.html"
    }
  ],
  "cleanUrls": true
}